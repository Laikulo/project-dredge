+uint16_t crc16(const uint8_t *buf, uint32_t len, uint16_t crc) 
+{
+    uint32_t counter;
+    
+	for (counter = 0; counter < len; counter++)
+	{
+		crc = (crc << 8) ^ crc16tab[((crc >> 8) ^ *buf++) & 0x00FF];
+	}
+
+    return crc;
+}
+
+#else
+// CRC16多项式：x^16 + x^15 + x^2 + 1
+uint16_t crc16(const uint8_t *data, uint32_t length, uint16_t crc) 
+{
+    for (int i = 0; i < length; ++i)
+    {
+        crc ^= (data[i] << 8);
+        for (int j = 0; j < 8; ++j)
+        {
+            if (crc & 0x8000)
+            {
+                crc = (crc << 1) ^ 0x8005;
+            }
+            else
+            {
+                crc <<= 1;
+            }
+        }
+    }
+    return crc;
+}
